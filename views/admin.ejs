<!-- The Admin portal to manage roles (Johnson Tran) -->
<!DOCTYPE html>
<html>
<head>
    <title>Admin Portal</title>
</head>
<body>
    <div class = "header">
        <p><b>Link Manager <%= name %></b></p>
        <link href="/admin.css" rel="stylesheet"/>
    </div>
    <div class = "content">
        <i><%= msg %></i>
        <table>
            <tr>
                <form>
                    <td class = "input-group"><input type="text" name="name" placeholder="Name" /></td>
                    <td class = "input-group"><input type="text" name="url" placeholder="URL" /></td>
                    <td class = "input-group"><input type="text" name="role" placeholder="Role" /></td>
                    <td class = "input-b">
                        <input type="submit" formaction="/portal/admin/add" value="Add"/>
                    </td>
                </form>
            </tr>
            <% links.forEach(link => { %>
            <tr>
                <form>
                    <input type="hidden" name="id" value="<%= link.id %>" />
                    <td class = "input-group"><input type="text" name="name" value="<%= link.name %>" /></td>
                    <td class = "input-group"><input type="text" name="url" value="<%= link.url %>" /></td>
                    <td class = "input-group"><input type="text" name="role" value="<%= link.role %>" /></td>
                    <td class = "input-b">
                        <input type="submit" formaction="/portal/admin/update" value="Save"/>
                        <input type="submit" formaction="/portal/admin/delete" value="Delete"/>
                    </td>
                </form>
            </tr>
            <% }); %>
        </table> 
        <form action="/auth/logout" class = "input-b"> 
            <input type="submit" formaction="/portal/home" value="Back to Portal" />
            <input type="submit" value="Log Out" />
        </form>
    </div>
</body>
</html>